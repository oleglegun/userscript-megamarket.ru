{
  "name": "megamarket.ru",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "config": {
    "userScriptName": "script.user.js",
    "metaScriptName": "script.meta.js"
  },
  "scripts": {
    "build": "tsc --outDir dist && npm run bundle && npm run add_tm_header",
    "commit_gh-pages": "git checkout gh-pages; git add ${npm_package_config_userScriptName}",
    "bundle": "npx esbuild dist/index.js --minify --bundle --outfile=${npm_package_config_userScriptName}",
    "add_tm_header": "cat ${npm_package_config_metaScriptName} | cat - ${npm_package_config_userScriptName} > temp.txt && mv temp.txt ${npm_package_config_userScriptName}"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "esbuild": "0.19.6"
  }
}
